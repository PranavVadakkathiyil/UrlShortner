<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL SHORTNER</h1>
    <div>
        <% if (locals.id) { %>
         <p>URL generated : http://localhost:8000/api/v1/<%= id %></p>
        <% } %>
        <form action="/api/v1/url" method="POST" >
            <input type="text" name="LargeUrl" id="LargeUrl" placeholder="https://example.com">
            <button type="submit">Submit</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>Sl.No</th>
                    <th>URL</th>
                    <th>Short URl</th>
                    <th>NO of Visit</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= url.redirectUrl %></td>
                            <td><%= url.shortUrlId %></td>
                            <td><%= url.visitistory.length %></td>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
        <% } %>
        
    </div>
    
</body>
</html>